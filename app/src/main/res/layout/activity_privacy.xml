<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:background="#F1F1F1"
    android:orientation="vertical"
    android:elevation="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_22sdp"
            android:src="@drawable/back_arrow"
            android:layout_gravity="center"
            app:tint="@color/black"
            />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:text="Privacy"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/_25ssp"
        />

    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_15sdp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_3sdp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_edit"
                    app:tint="@color/green"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="edit"
                    android:textSize="@dimen/_13ssp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:textColor="@color/green"
                    />


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                >

                <LinearLayout
                    android:id="@+id/lastSeen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_1sdp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Seen"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/_3sdp"
                        android:paddingEnd="@dimen/_3sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_16ssp"/>

                    <TextView
                        android:id="@+id/lastSeenTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/everyone"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_12ssp"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                >

                <LinearLayout
                    android:id="@+id/profilePhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_1sdp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile Photo"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/_3sdp"
                        android:paddingEnd="@dimen/_3sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_16ssp"/>

                    <TextView
                        android:id="@+id/profilePhotoTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EveryOne"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_12ssp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                >

                <LinearLayout
                    android:id="@+id/aboutStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_1sdp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/_3sdp"
                        android:paddingEnd="@dimen/_3sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_16ssp"/>

                    <TextView
                        android:id="@+id/aboutTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EveryOne"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_12ssp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                >

                <LinearLayout
                    android:id="@+id/statuses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_1sdp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/_3sdp"
                        android:paddingEnd="@dimen/_3sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_16ssp"/>

                    <TextView
                        android:id="@+id/statusTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EveryOne"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_12ssp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_7sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:padding="@dimen/_1sdp"
                    >


                <LinearLayout
                    android:id="@+id/fingerprintLock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_1sdp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fingerprint Lock"
                        android:textStyle="bold"
                        android:paddingStart="@dimen/_3sdp"
                        android:paddingEnd="@dimen/_3sdp"
                        android:paddingTop="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_16ssp"/>

                    <TextView
                        android:id="@+id/fingerLockTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disabled"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:textSize="@dimen/_12ssp"/>



                </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/fingerEnable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:text=""
                        tools:ignore="RtlHardcoded,UseSwitchCompatOrMaterialXml" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>

</LinearLayout>